# .gitignore (add this at repo root)
cat > .gitignore << 'EOF'
# --- Virtual envs ---
.venv/
venv/
env/

# --- Python junk ---
__pycache__/
*.pyc
*.pyo
*.pyd
*.log

# --- Notebooks ---
.ipynb_checkpoints/

# --- OS & IDE ---
.DS_Store
.vscode/
.idea/

# --- Data & heavy artifacts ---
data/raw/
data/private/
data/cache/
*.tfrecord
*.h5
*.hdf5
*.keras
*.ckpt
*.ckpt.*
*.pb
*.onnx
*.pth
*.pt
*.npz

# --- Experiments: keep figures & CSV/JSON, ignore weights/checkpoints ---
experiments/**/checkpoints/
experiments/**/weights/
experiments/**/runs/
wandb/
.tensorboard/
logs/
EOF

# stop tracking already-added venv
git rm -r --cached .venv 2>/dev/null || true
git add .gitignore
git commit -m "chore: ignore venv and heavy artifacts"
git push

